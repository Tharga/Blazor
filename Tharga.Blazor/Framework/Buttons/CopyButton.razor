@using Microsoft.JSInterop
@inject IJSRuntime Js
@inject NotificationService NotificationService

<StandardButton Text="Copy" Icon="content_copy" Click="CopyAction" />

@code {
    [Parameter]
    public string Content { get; set; }

    private async Task CopyAction()
    {
        if (string.IsNullOrWhiteSpace(Content))
        {
            NotificationService.Notify(new NotificationMessage { Summary = "Nothig to copy.", Severity = NotificationSeverity.Warning });
            return;
        }

        await Js.InvokeVoidAsync("clipboard.copyText", Content);
        NotificationService.Notify(new NotificationMessage { Summary = "Content has been copied.", Severity = NotificationSeverity.Info });
    }

}
